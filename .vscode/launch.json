    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/src/index.ts",
            "sourceMaps": true,
            "preLaunchTask": "npm: build-tsc",
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "externalTerminal",
            "runtimeArgs": [
                "--preserve-symlinks"
            ],
            "args": [
                "--file",
                "./automatiqalCLI-sample.qrac.yaml",
                // "--output",
                // "./test.txt"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Variables",
            "program": "${workspaceFolder}/src/index.ts",
            "sourceMaps": true,
            "preLaunchTask": "npm: build-tsc",
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "externalTerminal",
            "runtimeArgs": [
                "--preserve-symlinks"
            ],
            "args": [
                "--file",
                "./runbook-examples/automatiqalCLI-example-1.yaml",
                "--variables",
                "./runbook-examples/automatiqalCLI.variables.yaml",
                // "--output",
                // "./test.txt"
            ]
        }
    ]
}